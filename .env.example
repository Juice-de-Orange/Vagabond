# ---------- Datenbank ----------
DB_PASSWORD=               # Starkes Passwort generieren: openssl rand -hex 32
POSTGRES_DB=vagabond
POSTGRES_USER=vagabond

# ---------- Redis ----------
REDIS_URL=redis://redis:6379/0

# ---------- API ----------
API_KEY=                   # API-Key generieren: openssl rand -hex 32
AUTH_MODE=apikey           # "apikey" (Phase 1) oder "jwt" (Phase 2)

# ---------- GraphHopper ----------
GRAPHHOPPER_URL=http://graphhopper:8989